<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/popup_priorities_padding_vertical"
            android:paddingEnd="@dimen/popup_priorities_padding_horizontal"
            android:paddingStart="@dimen/popup_priorities_padding_horizontal"
            android:paddingTop="@dimen/popup_priorities_padding_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivNoPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_no_priority_24dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/popup_priorities_padding_vertical"
            android:paddingEnd="@dimen/popup_priorities_padding_horizontal"
            android:paddingStart="@dimen/popup_priorities_padding_horizontal"
            android:paddingTop="@dimen/popup_priorities_padding_vertical">

            <ImageView
                android:id="@+id/ivLowPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_priority_low_24dp"
                tools:layout_editor_absoluteY="52dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/popup_priorities_padding_vertical"
            android:paddingEnd="@dimen/popup_priorities_padding_horizontal"
            android:paddingStart="@dimen/popup_priorities_padding_horizontal"
            android:paddingTop="@dimen/popup_priorities_padding_vertical">

            <ImageView
                android:id="@+id/ivMediumPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_priority_medium_24dp"
                tools:layout_editor_absoluteY="28dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/popup_priorities_padding_vertical"
            android:paddingEnd="@dimen/popup_priorities_padding_horizontal"
            android:paddingStart="@dimen/popup_priorities_padding_horizontal"
            android:paddingTop="@dimen/popup_priorities_padding_vertical">

            <ImageView
                android:id="@+id/ivHighPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_priority_high_24dp"
                tools:layout_editor_absoluteY="114dp" />
        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>